@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Library Management System</h1>
    <h2>Manage Your Users and Books Here!</h2>
    <p>By IrfanshrfWebDev</p>
    <hr class="my-4" />
    <div class="mt-4">
        <a asp-controller="Users" asp-action="Index" class="btn btn-primary btn-lg m-2">
            <i class="fas fa-user-graduate"></i> Manage Users
        </a>
        <a asp-controller="Books" asp-action="Index" class="btn btn-success btn-lg m-2">
            <i class="fas fa-book"></i> Manage Books
        </a>
    </div>
</div>

<div class="container mt-4">
    <h3 class="text-center mb-4">Why Choose Our System?</h3>
    <div class="row text-center align-items-stretch">
        <div class="col-md-4 d-flex">
            <div class="card shadow-sm p-4 w-100">
                <i class="fas fa-globe fa-3x mb-3 text-primary"></i>
                <h4 class="font-weight-bold">Easy Accessibility</h4>
                <p>The cloud-based library management system provides easy access anytime, anywhere.</p>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card shadow-sm p-4 w-100">
                <i class="fas fa-shield-alt fa-3x mb-3 text-success"></i>
                <h4 class="font-weight-bold">Eliminates/Reduces Errors</h4>
                <p>Library management systems can help libraries with their data management process.</p>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="card shadow-sm p-4 w-100">
                <i class="fas fa-clock fa-3x mb-3 text-warning"></i>
                <h4 class="font-weight-bold">Saves Time</h4>
                <p>Save both users and the library staff a significant amount of time.</p>
            </div>
        </div>
    </div>
</div>

